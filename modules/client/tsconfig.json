{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "noEmit": true,
    "strict": true,
    "target": "es5",
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
